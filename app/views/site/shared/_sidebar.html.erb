<div id="home-sidebar" class="col-lg-3">

    <h1 class="my-4"></h1>
    <div class="card">
      <div class="card-header">
        <% @categories.each do |category| %>
          <div class="list-group">
              <a class="btn btn-default" data-toggle="collapse" data-target="#collapseCategory" aria-expanded="true" aria-controls="collapseOne">
                Categories
                <%= link_to  "#{category.name}", site_by_category_path(category), class: "list-group-item", id: "collapseCategory" %>
              </a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- /.col-lg-3 -->