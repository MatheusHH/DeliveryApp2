<div id="home-sidebar" class="col-lg-3">

    <h1 class="my-4"></h1>
    <div class="card">
      <div class="card-header text-center">
        <a class="btn btn-default" data-toggle="collapse" data-target="#collapseCategory" aria-expanded="true" aria-controls="collapseCategory">
          Categories
        </a>
        <% @categories.each do |category| %>
          <div class="list-group">
            <%= link_to  "#{category.name}", site_by_category_path(category), class: "list-group-item", id: "collapseCategory" %>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
  <!-- /.col-lg-3 -->