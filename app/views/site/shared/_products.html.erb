 <% @products.each do |product| %>
  <div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
      <% if product.image.attached? %> 
        <%= image_tag product.image.variant(resize_to_limit: [600, 400]), class: "card-img-top" %>
      <% else %>
        <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
      <% end %>     
      <div class="card-body">
        <h4 class="card-title">
          <%= product.name %>
        </h4>
        <h5><%= humanized_money_with_symbol product.price %></h5>
        <p class="card-text">
          
        </p>
      </div>
      <div class="card-footer">
        <%= link_to site_show_product_path(product), class: "btn btn-success btn-block btn-sm", remote: true do %>
          <i class="fas fa-eye"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>