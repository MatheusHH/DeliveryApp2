
<div class="card mt-4">
  <% if @product.image.attached? %> 
    <%= image_tag @product.image.variant(resize_to_limit: [900, 400]), class: "card-img-top img-fluid" %>
  <% else %>
    <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
  <% end %> 
  <div class="card-body">
    <h3 class="card-title"><%= @product.name %></h3>
    <h4><%= humanized_money_with_symbol @product.price %></h4>
    <p class="card-text"><%= @product.description %></p>
    <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
    4.0 stars
    <div class="card-footer">
      <div class="row">
        <div class="col-sm-3">
          <%= link_to root_path, class: "btn btn-success" do %>
            <i class="fas fa-backward"></i>
            <span>Back</span>
          <% end %>
        </div>
        <div class="col-sm-6"></div>
        <div class="col-sm-3">
          <%= form_with(model: [:site, @order_item], remote: true) do |f| %>
            <div class="row">
              <div class="col-sm-12">
                <div class="form-group">
                  <%= f.hidden_field :product_id, value: @product.id %>
                  <div class="input-group mb-4">
                    <%= f.number_field :quantity, value: 1, min: 1, class: "form-control" %>
                    <div class="input-group-append">
                      <%= button_tag type: 'submit', class: "btn btn-primary" do %>
                        <i class="fas fa-plus"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div> 
          <% end %>
        </div>
      <div>
    </div>
  </div>
</div>
