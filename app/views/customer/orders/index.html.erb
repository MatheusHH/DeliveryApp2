<br>
<div class="row">
  <div class="col-lg-12">
    <div class="card shadow p-3 mb-5">
      <div class="card-header">
        <h5>Customer::Orders#index</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Order Number</th>
                <th>Total</th>
                <th>Customer</th>
                <th><%= t('helpers.submit.actions') %></th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%= order.subtotal %></td>
                  <td><%= order.customer.profile.name %></td>
                  <td>
                  <%= link_to customer_order_path(order), class: "btn btn-success btn-circle" do %><i class="fa fa-eye"></i><% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <br>
        
        <div class="card-footer">
          
        </div>
      </div>  
    </div>
  </div>
</div>
