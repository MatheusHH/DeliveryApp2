<br>
<div class="row">
  <div class="col-lg-12">
    <div class="card shadow p-3 mb-5">
      <div class="card-header text-center">
        <h5>Meus Pedidos</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= OrderItem.human_attribute_name("order_id") %></th> 
                <th><%= OrderItem.human_attribute_name("total") %></th>
                <th><%= Order.human_attribute_name("customer_id") %></th>
                <th><%= t('helpers.submit.actions') %></th>
              </tr>
            </thead>

            <tbody>
              <% @orders.each do |order| %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%= order.subtotal %></td>
                  <td><%= order.customer.profile.name %></td>
                  <td>
                  <%= link_to customer_order_path(order), class: "btn btn-success btn-circle btn-sm" do %><i class="fa fa-eye"></i><% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      <hr>
      <div class=row>
        <div class="col-lg-4 col-md-6 mb-4"></div>
          <div class="col-lg-4 col-md-6 mb-4" id="pagination">
            <%= paginate @orders %>
          </div>
        <div class="col-lg-4 col-md-6 mb-4"></div>
      </div>
        
      </div>
      <div class="card-footer">
          
      </div>  
    </div>
  </div>
</div>
