<div class="card shadow p-3 mb-5">
  <div class="card-header" style="text-align: center">
    <h3><%= @deliveries.model_name.human(count: 2) %></h3>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= @deliveries.human_attribute_name("details") %></th>
            <th><%= @deliveries.human_attribute_name("status") %></th>
            <th><%= @deliveries.human_attribute_name("customer_id") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.details %></td>
              <td><%= delivery.status %></td>
              <td><%= delivery.order.customer.profile.name %></td>
              <td><%= link_to edit_admin_delivery_path(delivery), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to admin_delivery_path(delivery), class: "btn btn-success btn-circle" do %><i class="fa fa-eye"></i><% end %>
              <%= link_to admin_delivery_path(delivery, format: :pdf), class: "btn btn-danger btn-circle" do %><i class="far fa-file-pdf"></i><% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
  </div>
  <div class="card-footer">
    
  </div>  
</div>