<div class="card shadow p-3 mb-5"> 
  <div class="card-body">
    <%= form_with(model: [:admin, user], url: admin_edit_user_path(user), local: true) do |form| %>
      <% if user.errors.any? %>
        <div class="alert alert-alert" id="error_explanation">
          <a href="#" data-dismiss="alert" class="close">Ã—</a>
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this category from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %> 

      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= form.label :current_password %><br />
            <%= form.password_field :current_password, class: "form-control", placeholder: "Senha atual", required: "required" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= form.password_field :password, class: "form-control", placeholder: "Nova Senha" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <div class="form-group">
            <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirma Nova Senha" %>
          </div>
        </div>
      </div>

      <div class="card-footer">
        <%= form.submit "Salvar", class: "btn btn-primary" %>
        <%= link_to "Voltar", customer_root_path, class: "btn btn-success" %>
      </div> 
    <% end %>
  </div>
</div>