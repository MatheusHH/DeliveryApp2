<div class="card shadow p-3 mb-5">
  <div class="card-header" style="text-align: center">
    <h3><%= @customers.model_name.human(count: 2) %></h3>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= @customers.human_attribute_name("email") %></th>
            <th><%= Profile.human_attribute_name("name") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.email %></td>
              <td><%= customer.profile.name %></td>
              <td>
              <%= link_to admin_customer_path(customer), class: "btn btn-success btn-circle" do %><i class="fa fa-eye"></i><% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <hr>
  <div class=row>
    <div class="col-lg-4 col-md-6 mb-4"></div>
      <div class="col-lg-4 col-md-6 mb-4" id="pagination">
        <%= paginate @customers %>
      </div>
    <div class="col-lg-4 col-md-6 mb-4"></div>
  </div>
  </div>
  <div class="card-footer">
    
  </div>  
</div>