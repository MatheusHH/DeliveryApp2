<div class="card shadow p-3 mb-5">
  <div class="card-header" style="text-align: center">
    <h3><%= @categories.model_name.human(count: 2) %></h3>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= @categories.human_attribute_name("name") %></th>
            <th><%= @categories.human_attribute_name("active") %></th>
            <th><%= @categories.human_attribute_name("user") %></th>
            <th><%= t('helpers.submit.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.active %></td>
              <td><%= category.user.id %></td>
              <td><%= link_to edit_admin_category_path(category), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
              <%= link_to admin_category_path(category), class: "btn btn-success btn-circle" do %><i class="fa fa-eye"></i><% end %>
              <%= link_to admin_category_path(category), method: :delete, class: "btn btn-danger btn-circle", data: { confirm: t('confirm') } do  %> <i class="fa fa-trash"></i> <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
    
    <div class="card-footer">
      <%= link_to new_admin_category_path, class: "btn btn-primary btn-icon-split btn-sm" do %>
       <i class="fas fa-plus"></i>
       <span class="text"> <%= t('actions.new(a)', model: @categories.model_name.human) %></span>
      <% end %>
    </div>
  </div>  
</div>